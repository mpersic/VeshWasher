<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMachineFragment">

    <EditText
        android:layout_marginTop="100dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/admin_machineName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter machine name" />
    <EditText
        android:layout_below="@id/admin_machineName"
        android:id="@+id/admin_machine_program"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:inputType="textPassword"
        android:hint="Enter machine program" />
    <Button
        android:layout_centerHorizontal="true"
        android:layout_below="@id/admin_machine_program"
        android:id="@+id/admin_machine_btn_add"
        android:text="add "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>